<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_gameEntry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".GameListActivity">

    <TextView
        android:id="@+id/textView_gameEntry_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_gameEntry_emotion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Baba is You" />

    <TextView
        android:id="@+id/textView_gameEntry_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="4/8/2025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_gameEntry_name" />

    <TextView
        android:id="@+id/textView_gameEntry_moneySpent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_gameEntry_timeSpent"
        app:layout_constraintTop_toBottomOf="@+id/textView_gameEntry_name"
        tools:text="$0.00" />

    <TextView
        android:id="@+id/textView_gameEntry_timeSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/textView_gameEntry_date"
        app:layout_constraintTop_toBottomOf="@+id/textView_gameEntry_name"
        tools:text="0.5 hours" />

    <TextView
        android:id="@+id/textView_gameEntry_emotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView_gameEntry_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_gameEntry_name"
        tools:text="&#128512; " />
</androidx.constraintlayout.widget.ConstraintLayout>